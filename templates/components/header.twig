<header>
    <nav class="navbar navbar-dark bg-dark shadow">
        <div class="container-fluid center">
            <a class="navbar-brand" href="/justplay">Justplay</a>

            {% if app.loggedIn %}
                
                {% if app.user.role == 'admin' %}                       
                    <div>
                        <button class="btn btn-warning my-2 my-sm-0" onclick="logout()">Admin Logout</button>
                    </div>
                {% else %}
                    <h4> Welcome Back, {{app.user.username}}</h4>
                    
                    <div>
                        <button class="btn btn-warning my-2 my-sm-0" onclick="logout()">User Logout</button>
                    </div>
                {% endif %}
            {% else %}
                {# show guest nav bar #}
                <div>
                    <button class="btn btn-outline-warning my-2 my-sm-0" data-bs-toggle="modal" data-bs-target="#exampleModal" type="button">Login</button>
                    <button class="btn btn-warning my-2 my-sm-0" data-bs-toggle="modal" data-bs-target="#signupModal">Become a member</button>
                </div>

                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Log In</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" id="sample_form">
                                    <div class="mb-3">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp">
                                    </div>
                                    <div class="mb-3">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="password">
                                    </div>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary" id="login-submit" onclick="loginValidation()">Submit</button>
                                    </div>

                                    <div class="d-grid mt-3">
                                        <span id="message" class="text-center">
                                        
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                 <div class="modal fade" id="signupModal" tabindex="-1" aria-labelledby="signupModal" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="signupModal">Sign Up</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form method="post" id="signup-form">
                                    <div class="mb-3">
                                        <label for="newUsername" class="form-label">Username</label>
                                        <input type="text" class="form-control signup-controller" id="newUsername" name="newUsername">
                                    </div>
                                    <div class="mb-3">
                                        <label for="newPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control signup-controller" id="newPassword" name="newPassword">
                                    </div>

                                    <div class="mb-3">
                                        <label for="repeatPassword" class="form-label">Repeat Password</label>
                                        <input type="password" id="repeatPassword" class="form-control signup-controller" name="repeatPassword">
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary" id="signup-submit" onclick="signupValidation()">Submit</button>
                                    </div>

                                    <div class="d-grid mt-3">
                                        <span id="signup-message" class="text-center">
                                        
                                        </span>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>
    </nav>
</header>

